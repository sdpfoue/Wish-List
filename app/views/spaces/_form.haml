=form_for(@space) do |f|
  -if @space.errors.any?
    #error_explanation
      %ul
        -@space.errors.full_messages.each do |msg|
          %li=msg
  
  .field
    =f.label :name 
    =t '.name_tips'
    %br/
    =f.text_field :name
    %br/
    =f.label :des
    %br/
    =f.text_area :des
    .action
      =f.submit
    
