=form_for(@topic) do |f|
  -if @topic.errors.any?
    #error_explanation
      %ul
        -@topic.errors.full_messages.each do |msg|
          %li=msg
  
  .field
    =f.label :title
    %br/
    =f.text_field :title
    %br/
    =f.label :content
    %br/
    =f.text_area :content,:size=>"70x10"
    %br
    =f.label :tags
    （至少要添加一个标签）
    %br
    = f.text_field :tags,:value=>@topic.tags_string
    .action
      =f.submit
=javascript_include_tag 'nicEdit'
:javascript
  bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
    
