%div
  .align-left.avatar
    =avatar_url @author
  #topic
    #topic-header
      %h1=@topic.title
      来自
      =@author.name
      =@topic.created_at
    #topic-content
      =@topic.content
  #replies
    #reply-form
      我要回复：
      =form_for(@reply) do |f|
        =f.text_area(:content, :size => "60x6") 
        =hidden_field_tag :topic,@topic.id.to_s
        %br
        = submit_tag "放上去"

  
