=form_for(@wish) do |f|
  -if @wish.errors.any?
    #error_explanation
      %ul
        -@wish.errors.full_messages.each do |msg|
          %li=msg
  
  .field
    =f.label :name 
    （必填）
    %br/
    =f.text_field :name
    %br/
    =f.label :des
    %br/
    =f.text_area :des
    %br
    =f.label :tags
    %br
    = f.text_field :tags, :value=>@wish.tags_string
    .action
      =f.submit
    
